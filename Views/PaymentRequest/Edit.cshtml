@model _123Pay.ViewModels.PaymentRequestAttachmentViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>PaymentRequestViewModel</h4>
<hr />

<form enctype="multipart/form-data" asp-action="Edit" asp-controller="PaymentRequest" method="post">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="AttachmentFilePath" />
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="ReferenceNo" class="control-label"></label>
                <input asp-for="ReferenceNo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <p>Upload one or more files using this form:</p>
                    <input type="file" name="attachment" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success" asp-route-tag="DONE">Tag as Done</button>
            <button type="submit" class="btn btn-warning" asp-route-tag="FAILED">Tag as Failed</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to List</a>
        </div>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</form>
